
  <ul class="postslist toprow row push-down">
  <% if params[:tag] %>
    <h1 class="tagged-with"> Posts tagged with <span class="tagged-with-word"><%= params[:tag] %></span> </h1>
  <% end %>
  <% @posts.each do |post|%>

   <li>
    <h3 ><%= link_to "#{post.title}" , post %></h3>

      <div class="post-date-index"><%= post.created_at.to_formatted_s(:long) %></div>
   </li>

  <% end %>
</ul><a class="exit-off-canvas"></a>
